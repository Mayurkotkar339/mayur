name: Run Java and Python Programs

on:
  push:
    branches:
      - main

jobs:
  run-all:
    runs-on: ubunbtu-latest

    steps:
   #Checkout respository code
    - name: Checkout code
      uses: actions/setup-python@v4
      
   #Set up Python
    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.10'

    #Run first pythonb script
    - name: Run Hello.py 1
      run: Python Hello.py
    #Run second Python script
    - name: Run Hello.py 2
      run: Python Hello.py
